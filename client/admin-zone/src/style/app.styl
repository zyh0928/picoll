$body-font-family = 'Ubuntu', 'Noto Sans SC', sans-serif

// Vuetify
@import '~vuetify/src/stylus/main'

// Animate.css
@import '~animate.css/animate.css'

// Base
*
  box-sizing border-box
  padding 0
  margin 0

html
  font-family $body-font-family
  overflow hidden auto

.application
  font-family $body-font-family

